    "/api/expressions/import": {
      "post": {
        "summary": "Import expressions from file",
        "description": "Import expressions from a JSON file with validation options",
        "tags": ["Expressions", "Import"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "JSON file containing expressions"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "duplicateStrategy",
            "in": "query",
            "description": "Strategy for handling duplicate expressions",
            "schema": {
              "type": "string",
              "enum": ["skip", "update", "error"],
              "default": "skip",
              "example": "skip"
            }
          },
          {
            "name": "validateOnly",
            "in": "query",
            "description": "Only validate without importing",
            "schema": {
              "type": "boolean",
              "default": false,
              "example": false
            }
          },
          {
            "name": "batchSize",
            "in": "query",
            "description": "Number of expressions to process per batch",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 10,
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Expressions imported successfully",
            "content": {
