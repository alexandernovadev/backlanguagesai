    "/api/lectures/import": {
      "post": {
        "summary": "Import lectures from file",
        "description": "Import lectures from a JSON file with validation options",
        "tags": ["Lectures", "Import"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "JSON file containing lectures"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "duplicateStrategy",
            "in": "query",
            "description": "Strategy for handling duplicate lectures",
            "schema": {
              "type": "string",
              "enum": ["skip", "update", "error"],
              "default": "skip",
              "example": "skip"
            }
          },
          {
            "name": "validateOnly",
            "in": "query",
            "description": "Only validate without importing",
            "schema": {
              "type": "boolean",
              "default": false,
              "example": false
            }
          },
          {
            "name": "batchSize",
            "in": "query",
            "description": "Number of lectures to process per batch",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 10,
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lectures imported successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Lectures imported successfully"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "imported": {
                          "type": "integer",
                          "example": 15
                        },
                        "skipped": {
                          "type": "integer",
                          "example": 3
                        },
                        "errors": {
                          "type": "integer",
                          "example": 0
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid file or parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/common.json#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Error importing lectures",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/common.json#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}
